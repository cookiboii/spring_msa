pipeline {
    agent any

    stages {

        stage('Pull code from GitHub') {
            steps {
                // 젠킨스와 연결된 SCM에서 코드를 가져옵니다.
                checkout scm
            }
        }

        stage('Build code with Gradle') {
            steps {
                script {
                    sh """
                    echo "Build stage start"
                    ./gradlew clean build
                    """
                }
            }
        }

    }
}
